


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  
}

generator client {
  provider = "prisma-client-js"
}




model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  timeCards TimeCard[]
}

model TimeCard {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime
  startTime DateTime?
  endTime   DateTime?
}